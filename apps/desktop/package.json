{
  "name": "mii-ait",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    /* ──────────────── 開発 ──────────────── */
    "dev": "concurrently -c \"cyan,magenta,green\" -n \"VITE,TS,ELECTRON\" \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:main": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on http://localhost:5173 dist/main/main.js && electron .",
    /* ──────────────── 本番ビルド ──────────────── */
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "npm run build:renderer && npm run build:main && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.8",
    "clsx": "^2.1.0",
    "electron": "^28.2.5",
    "electron-store": "^9.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.3",
    "vite": "^5.1.4",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.mii.ait",
    "directories": {
      "output": "D:\\MiiLab_AIT\\AIT"
    },
    "files": [
      "dist/**/*"
    ],
    "asar": false
  }
}
